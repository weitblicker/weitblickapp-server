			<tbody>
				{{#projects}}
				<tr>
					<th scope="row">{{id}}</th>
					<td>{{name}}</td>
					<td>{{abst}}</td>
					<td>{{desc}}</td>
					<td>
						<a href="/backend/projects/{{language}}/edit/{{id}}">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</a>
					</td>
				</tr>
				{{/projects}}
			</tbody>
		</table>
