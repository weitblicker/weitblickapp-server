	<a href="/backend/projects/add">
		<i class="fa fa-plus-circle" aria-hidden="true"></i> add new project
	</a>
	<a href="/backend/projects/de">
		<i class="fa fa-flag" aria-hidden="true"></i> DE
	</a>
	<a href="/backend/projects/en">
		<i class="fa fa-flag" aria-hidden="true"></i> EN
