<!DOCTYPE html>
<html lang="en">
{{>header}}

<body>
	{{>navbar}}

	<div class="row">
		{{>sidebar}}


		<script type="text/javascript" src="/backend/file/users.js"></script>

		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<h1 class="page-header">Weitblick Users</h1>

			<div class="row">
				<div class="col-xs-6 col-sm-3">
					<a href="/backend/users/add">Add new User</a>
				</div>
			</div>

			<h2 class="sub-header">Users Overview</h2>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>ID</th>
							<th>Name</th>
							<th>E-Mail</th>
						</tr>
					</thead>
					<tbody>
						{{#users}}
						<tr>
							<th scope="row">{{id}}</th>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>
								<a href="/backend/users/edit/{{id}}">
									<i class="fa fa-pencil" aria-hidden="true"></i>
								</a>

								<a class="delete" href="/rest/user/remove/{{id}}">
									<i class="fa fa-trash" aria-hidden="true"></i>
								</a>
							</td>
						</tr>
						{{/users}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
</html>