<!DOCTYPE html>
<html lang="{{language}}">
	{{>header}}
	<body>
		{{>navbar}}
    	<div class="row">
    		{{>sidebar}}

    		<script type="text/javascript" src="/backend/file/updateHost.js"></script>

        	<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Name</h3>
					</div>
					<div class="panel-body">
						<a href="#" class="editable" id="name" data-type="text" data-pk="{{id}}" data-title="Enter name" data-url="/rest/host/update">{{name}}</a>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">E-Mail</h3>
					</div>
					<div class="panel-body">
						<a href="#" class="editable" id="email" data-type="email" data-pk="{{id}}" data-title="Enter email" data-url="/rest/host/update">{{email}}</a>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Location</h3>
					</div>
					<div class="panel-body">
						<a href="#" class="editable location" id="location" data-value="{{location.id}}" data-type="select" data-pk="{{id}}" data-title="Select location" data-url="/rest/host/update"></a>
					</div>
				</div>
				        
			</div>
		</div>
	</body>
</html>